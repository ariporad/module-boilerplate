{
  "name": "simple-boilerplate",
  "description": "A simple node module boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run lint && ava",
    "test:cov": "nyc npm run test",
    "posttest:cov": "npm run check-cov",
    "check-cov": "nyc check-coverage --lines 90 --functions 90 --branches 90",
    "report": "nyc report --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "watch": "nodemon -w lib -w test --exec \"npm run test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emiw/simple-boilerplate.git"
  },
  "author": {
    "name": "Ari Porad",
    "email": "ari@emiw.xyz"
  },
  "contributors": [
    {
      "name": "Ari Porad",
      "email": "ari@emiw.xyz"
    },
    {
      "name": "Zoe Carver",
      "email": "zoe@emiw.xyz"
    },
    {
      "name": "Henry Roseman",
      "email": "henry@emiw.xyz"
    }
  ],
  "devDependencies": {
    "ava": "^0.9.1",
    "babel-eslint": "^4.1.6",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "^1.1.4",
    "eslint": "^1.10.1",
    "eslint-config-airbnb": "^2.1.1",
    "nodemon": "^1.8.1",
    "nyc": "^5.0.0",
    "proxyquire": "^1.7.3",
    "rewire": "^2.5.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emiw/simple-boilerplate/issues"
  },
  "homepage": "https://github.com/emiw/simple-boilerplate#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog/"
    }
  }
}
