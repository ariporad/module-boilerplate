{
  "name": "simple-boilerplate",
  "description": "A simple node module boilerplate",
  "main": "lib/index.js",
  "watch": {
    "test": "{lib,test}/**/*.js"
  },
  "scripts": {
    "test": "npm run lint && ava",
    "test:cov": "npm run lint && istanbul cover _mocha",
    "watch": "npm-watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ariporad/simple-boilerplate.git"
  },
  "author": {
    "name": "Ari Porad",
    "email": "ari@ariporad.com",
    "url": "http://ariporad.com"
  },
  "devDependencies": {
    "ava": "^0.7.0",
    "babel-eslint": "^4.1.5",
    "coveralls": "^2.11.4",
    "cz-conventional-changelog": "^1.1.4",
    "eslint": "^1.10.1",
    "eslint-config-airbnb": "^1.0.0",
    "npm-watch": "0.0.1",
    "proxyquire": "^1.7.3",
    "rewire": "^2.5.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ariporad/simple-boilerplate/issues"
  },
  "homepage": "https://github.com/ariporad/simple-boilerplate#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog/"
    }
  }
}
